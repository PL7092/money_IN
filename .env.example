# MariaDB Database Configuration
MYSQL_ROOT_PASSWORD=financeflow_root_password_change_in_production
MYSQL_DATABASE=financeflow
MYSQL_USER=financeflow_user
MYSQL_PASSWORD=financeflow_password_change_in_production
MARIADB_PORT=3306

# Application Configuration
NODE_ENV=production
APP_PORT=3000
APP_SECRET=your_super_secret_key_change_this_in_production
CORS_ORIGIN=http://localhost:3000

# Security
JWT_SECRET=your_jwt_secret_key_change_this_in_production
BCRYPT_ROUNDS=12

# AI APIs (Optional - leave empty to disable)
OPENAI_API_KEY=
GEMINI_API_KEY=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Unraid Configuration (optional)
UNRAID_APPDATA_PATH=/mnt/user/appdata/financeflow
UNRAID_BACKUP_PATH=/mnt/user/backups/financeflow