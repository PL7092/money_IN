# Database Configuration
DATABASE_URL=postgresql://financeflow_user:financeflow_password@localhost:5432/financeflow

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://:financeflow_redis_password@localhost:6379

# Application Configuration
NODE_ENV=production
APP_SECRET=your_super_secret_key_change_this_in_production
CORS_ORIGIN=http://localhost:3000

# Security
JWT_SECRET=your_jwt_secret_key_change_this
BCRYPT_ROUNDS=12

# AI APIs (Optional)
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30